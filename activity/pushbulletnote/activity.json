{
  "name": "pushbulletnote",
  "type": "flogo:activity",
  "ref": "github.com/achimera/flogo/activity/pushbulletnote", 
  "version": "0.0.1",
  "title": "Pushbullet Note Notification Activity",
  "description": "Simple activity to send a note to a target across the Pushbullet Service",
  "author": "Alessandro Chimera <achimera@tibco.com>",
  "homepage": "https://github.com/achimera/flogo/tree/master/activity/pushbulletnote",
  "inputs":[
    {
      "name": "accessToken",
      "type": "string",
      "required": true
    },
    {
      "name": "note",
      "type": "string"
    },
    {
      "name": "noteTitle",
      "type": "string"
    },{
      "name": "emailTarget",
      "type": "string"
    },
    {
      "name": "channelTarget",
      "type": "string"
    }
  ],
  "outputs": [
  	{
      "name": "status",
      "type": "string"
    }
  ]
}